<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="345.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hackudc.competenciapp.CPrincipal">

    <!-- Ãrea de mensajes -->
    <VBox prefHeight="345.0" prefWidth="540.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Cabecera del chat -->
        <HBox spacing="10" style="-fx-background-color: #eeeeee; -fx-padding: 10;">
            <Button mnemonicParsing="false" text="Ajustes" />
            <Label fx:id="nombreVentana" alignment="BOTTOM_RIGHT" contentDisplay="CENTER" style="-fx-font-size: 16;" text="Consultas" textAlignment="CENTER" />
            <Region HBox.hgrow="ALWAYS" /> <!-- Espaciador -->
            <Button fx:id="botoncambiarVentana" onAction="#cambiarVentana" text="Aportaciones" />
        </HBox>


        <!-- ScrollPane para los mensajes -->
        <ScrollPane fx:id="scrollPaneMensajes" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <VBox fx:id="listaMensajes" spacing="10" style="-fx-background-color: transparent;" />
        </ScrollPane>


        <!-- Caja de entrada de mensajes -->
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="messageTextField" promptText="Escribe un mensaje..." HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Adjuntar" />
            <Button fx:id="sendButton" text="Enviar" />
        </HBox>
    </VBox>
</AnchorPane>